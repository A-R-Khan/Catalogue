<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#1B203E">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/round_settings_black_36"
        app:iconTint="#1B203E"
        app:iconSize="24dp"
        android:background="@drawable/gradient_accent"
        app:backgroundTint="@null"
        android:textColor="#1B203E"
        app:iconGravity="start"
        app:shapeAppearanceOverlay="@style/Widget.AppTheme.ThumbnailShapeAppearance"
        android:text="ANIMATIONS : ON"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"/>

</FrameLayout>